# BTC 15m Lag-Arb Strategy - Environment Variables

# Polymarket CLOB Client (Magic Link / Email)
# Export private key from https://reveal.magic.link/polymarket
PM_PRIVATE_KEY=0x1111111111111111111111111111111111111111111111111111111111111111
# Address shown below your profile picture on Polymarket ("proxy" / funder address)
PM_PROXY_ADDRESS=0x2222222222222222222222222222222222222222

# Optional: provide API creds explicitly (otherwise the client will derive them)
CLOB_API_KEY=your_clob_api_key_here
CLOB_SECRET=your_clob_secret_here
CLOB_PASS_PHRASE=your_clob_passphrase_here

# Target market / tokens (fill these from Gamma API / Polymarket UI)
# You MUST set these 3 values for the strategy to run.
PM_MARKET_ID=btc-updown-15m-1765570500
PM_TOKEN_ID_UP=your_up_token_id_here
PM_TOKEN_ID_DOWN=your_down_token_id_here

# Hyperliquid price source
# Uses Hyperliquid "info" endpoint (public) by default.
HL_BASE_URL=https://api.hyperliquid.xyz
HL_SYMBOL=BTC

# Signal thresholds
# Enter when external price moves but PM book hasn't updated.
# Example: 0.0010 = 10 bps
BTC_MOVE_THRESHOLD=0.0010

# Execution
# Max notional per entry in USDC
MAX_POSITION_SIZE=25
# Only take the very best ask/bid (do not sweep deeper). If best level cannot fully fill, order will fail (FOK).
TOP_OF_BOOK_ONLY=true

# Risk controls
# Exit if no favorable move within this many seconds
MAX_HOLD_SECONDS=30
# Cooldown after a trade to avoid overtrading in chop
COOLDOWN_SECONDS=5

# Polling (lower = faster, higher = safer)
HL_POLL_MS=200
PM_POLL_MS=200

# Safety
DRY_RUN=true
